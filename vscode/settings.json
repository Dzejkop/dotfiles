{
    "editor.renderWhitespace": "boundary",
    "files.trimTrailingWhitespace": true,
    "window.zoomLevel": 0,
    "editor.fontFamily": "'Fira Code Retina', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "workbench.colorTheme": "Shades of Purple",
    "workbench.iconTheme": "vscode-great-icons",
    "[sql]": {
        "editor.defaultFormatter": "mtxr.sqltools"
    },
    "gitlens.views.repositories.autoReveal": false,
    "gitlens.views.repositories.files.layout": "tree",
    "git.autofetch": true,
    "debug.allowBreakpointsEverywhere": true,
    "showGitMetrics": false,
    "editor.minimap.enabled": false,
    "zenMode.hideLineNumbers": false,
    "extensions.ignoreRecommendations": true,
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "git-commit",
        "go",
        "handlebars",
        "haskell",
        "html",
        "jade",
        "java",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "pug",
        "python",
        "restructuredtext",
        "rust",
        "scala",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "yaml",
        "yml"
    ],
    "terminal.integrated.rendererType": "experimentalWebgl",
    "[csv]": {},
    "diffEditor.ignoreTrimWhitespace": true,
    "vim.disableExtension": true,
    "vim.useSystemClipboard": true,
    "rust-analyzer.cargo-watch.command": "check --all --tests",
    "tableformatter.markdown.oneSpacePadding": false,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.editor.labelFormat": "short",
}